<% @page_title = "All Admins" %>

<div class="admins index">
  <h2>Admins</h2>

  <%= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>
  <%= link_to("Add New Admin", new_admin_user_path, :class => 'action new') %>

  <div><%= pluralize(@admin_users.size, 'admin user') %> found</div>

  <table class="listing" summary="Admin list">
    <tr class="header">
      <th>ID</th>
      <th>Last Name</th>
      <th>First Name</th>
      <th>UserName</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <!-- This loops through the users table and assigns
      values to the users value -->
    <% @admin_users.each do |adminUser| %>
    <tr>
      <td><%= adminUser.id %></td>
      <td><%= adminUser.last_name %></td>
      <td><%= adminUser.first_name %></td>
      <td><%= adminUser.username %></td>
      <td><%= mail_to(adminUser.email) %></td>
      <td class="actions">
        <%= link_to("Show", admin_user_path(adminUser), :class => 'action show') %>
        <%= link_to("Edit", edit_admin_user_path(adminUser), :class => 'action edit') %>
        <%= link_to("Delete", delete_admin_user_path(adminUser), :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
  <br>
  <br>
  <p>
    <%= link_to("Return to Main Menu", admin_path) %>
  </p>
</div>
