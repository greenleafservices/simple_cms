<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS: <%= @page_title || "Admin Area" %></title>
    <!-- <link rel="stylesheet" type="text/css" href="app\assets\stylesheets\styles.css"> -->
    <%= stylesheet_link_tag('admin', :media => 'all') %>
  </head>
  <body>

    <div id="header">
        <h1>Simple CMS Admin</h1>
    </div>
      <div id="main">
        <!--  ***************  Check for any alerts, error or notices to be flashed *********************  -->
        <% if !flash[:alert].blank? %>
          <div class="alert">
            <%= flash[:alert] %>
          </div>
        <% end %>
        <% if !flash[:error].blank? %>
          <div class="error">
            <%= flash[:error] %>
          </div>
        <% end %>
        <% if !flash[:notice].blank? %>
          <div class="notice">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <div id="content">
  <!-- before yield -->
        <%= yield %>
  <!-- after yield -->
        </div>
      </div>

  <div id="footer">
    <p id="copyright">&copy; lynda.com</p>
  </div>

  </body>
</html>
