<%= error_messages_for(f.object) %>

<table summary="Section form fields">
  <tr>
    <th>Section Name</th>
    <td><%= f.text_field(:name) %></td>
  </tr>
  <tr>
    <th>Page</th>
    <!-- <td><%#= f.select(:page_id, @pages.map {|p| [p.name, p.id]}) %></td> -->
    <!-- Removing the line above disallows and repositioning of the section to another page -->
     <td><%= f.object.page.name %></td> <!--Static display of page associated with this section  -->
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.select(:position, 1..@section_count) %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.check_box(:visible) %></td>
  </tr>
  <tr>
    <th>Content type</th>
    <!-- <td><%= f.text_field(:content_type) %></td> -->
    <td>
      <%= f.radio_button(:content_type, 'Text') %> Text
      <%= f.radio_button(:content_type, 'HTML') %> HTML
    <td>
  </tr>
  <tr>
    <th>Content</th>
    <!-- <td><%= f.text_field(:content) %></td> -->
    <td><%= f.text_area(:content, :size => '40x10') %></td>
  </tr>
</table>
