<% @page_title = "Show Section" %>

<%= link_to("<< Back to List", sections_path(:page_id => @page.id), :class => 'back-link') %>
<!--  pages_path above is a URL helper -->
<div class="section index">
  <h2>Show Sections</h2>

  <table class="listing"summary="Section detail view">
    <tr>
      <th>ID</th>
      <td><%= @section.page_id %></td>
    </tr>
    <tr>
      <th>Name</th>
      <td><%= @section.name %></td>
    </tr>
    <tr>
      <th>Position</th>
      <td><%= @section.position %></td>
    </tr>
    <tr>
      <th>Visible?</th>
      <td><%= @section.visible ? 'true' : 'false' %></td>
    </tr>
    <tr>
      <th>Content Type</th>
      <td><%= @section.content_type %></td>
    </tr>
    <tr>
      <th>Content</th>
      <!-- <td><%= @section.content %></td> -->
      <td>
        <% case @section.content_type %>
          <% when 'HTML' %>
            <%= raw(sanitize(@section.content, :tags => ['strong', 'em', 'a'])) %>
          <% when 'Text' %>
            <%= simple_format(@section.content) %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @section.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @section.updated_at %></td>
    </tr>
  </table>

</div>
